---
import TranslatableText from "@components/general/TranslatableText.astro";
import TranslatableList from "@components/general/TranslatableList.astro";
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
>
  <TranslatableText 
    en="EXPERIENCE" 
    es="EXPERIENCIA"
    tag="h2"
    class="w-[15rem] mt-16 text-2xl font-bold"
  />
  <div class="w-full">
    <!-- Hospocket -->
    <div class="my-12 p-6 rounded-lg hover:bg-gray/5 dark:hover:bg-dark-gray/20 transition-colors duration-300">
      <div class="flex justify-between items-center flex-wrap border-b border-gray/20 dark:border-gray/10 pb-4 mb-4">
        <h3 class="text-2xl font-semibold">Hospocket (Remote)</h3>
        <p class="text-sm bg-gray/10 dark:bg-dark-gray/30 px-3 py-1 rounded-full font-medium">
          February 2021 - April
        </p>
      </div>
      <p class="text-sm mt-2 text-blue font-medium mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        United States
      </p>
      <div class="mt-3 space-y-2">
        <TranslatableList 
          enItems={[
            "✓ Developing screens and UI components for the web application using React and Chakra.",
            "✓ Integrated all the responsive design and fixed bugs in the frontend."
          ]}
          esItems={[
            "✓ Desarrollo de pantallas y componentes UI para la aplicación web usando React y Chakra.",
            "✓ Integré todo el diseño responsivo y corregí errores en el frontend."
          ]}
        />
      </div>
    </div>

    <!-- VertexStudio -->
    <div class="my-12 p-6 rounded-lg hover:bg-gray/5 dark:hover:bg-dark-gray/20 transition-colors duration-300">
      <div class="flex justify-between items-center flex-wrap border-b border-gray/20 dark:border-gray/10 pb-4 mb-4">
        <h3 class="text-2xl font-semibold">VertexStudio (Remote)</h3>
        <p class="text-sm bg-gray/10 dark:bg-dark-gray/30 px-3 py-1 rounded-full font-medium">
          Apr 2021 - Jun 2025
        </p>
      </div>
      <p class="text-sm mt-2 text-blue font-medium mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        El Salvador
      </p>
      <div class="mt-3 space-y-2">
        <TranslatableList 
          enItems={[
            "✓ Web virtual reality for a metaverse platform in healthcare.",
            "✓ Development of bots for discord communities.",
            "✓ Others tasks connected to the nature of the job.",
            "✓ Code Improvements and Refactoring."
          ]}
          esItems={[
            "✓ Realidad virtual web para una plataforma de metaverso en salud.",
            "✓ Desarrollo de bots para comunidades de discord.",
            "✓ Otras tareas relacionadas con la naturaleza del trabajo.",
            "✓ Mejoras de código y refactorización."
          ]}
        />
      </div>
    </div>

    <!-- WeShopU -->
    <div class="my-12 p-6 rounded-lg hover:bg-gray/5 dark:hover:bg-dark-gray/20 transition-colors duration-300">
      <div class="flex justify-between items-center flex-wrap border-b border-gray/20 dark:border-gray/10 pb-4 mb-4">
        <h3 class="text-2xl font-semibold">WeShopU (Remote)</h3>
        <p class="text-sm bg-gray/10 dark:bg-dark-gray/30 px-3 py-1 rounded-full font-medium">
          Mar 2025 - May 2025
        </p>
      </div>
      <p class="text-sm mt-2 text-blue font-medium mb-4 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        United States
      </p>
      <div class="mt-3 space-y-2">
        <TranslatableList 
          enItems={[
            "✓ CRM management in Airtable.",
            "✓ Shopify maintenance.",
            "✓ Process automation.",
            "✓ Web development."
          ]}
          esItems={[
            "✓ Gestión de CRM en Airtable.",
            "✓ Mantenimiento de Shopify.",
            "✓ Automatización de procesos.",
            "✓ Desarrollo web."
          ]}
        />
      </div>
    </div>
  </div>
</section>