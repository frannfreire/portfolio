---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
>
  <h2 class="w-[15rem] mt-16 text-2xl font-bold">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
        <div class="my-12 p-6 rounded-lg hover:bg-gray/5 dark:hover:bg-dark-gray/20 transition-colors duration-300">
          <div class="flex justify-between items-center flex-wrap border-b border-gray/20 dark:border-gray/10 pb-4 mb-4">
            <h3 class="text-2xl font-semibold">{item.name}</h3>
            <p class="text-sm bg-gray/10 dark:bg-dark-gray/30 px-3 py-1 rounded-full font-medium">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <p class="text-sm mt-2 text-blue font-medium mb-4 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {item.location}
          </p>
          <ul class="mt-3 space-y-2">
            {item.description.map((item) => (
              <li class="dark:text-gray text-sm pl-2 border-l-2 border-blue/50 ml-2">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
