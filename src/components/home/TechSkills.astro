---
import { info } from "@data";
import TranslatableText from "@components/general/TranslatableText.astro";
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
>
  <TranslatableText 
    en="TECH SKILLS" 
    es="HABILIDADES TÉCNICAS"
    tag="h2"
    class="w-[15rem] mt-16 text-2xl font-bold"
  />
  <div class="w-full">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {info.techSkills.map((category) => (
        <div class="my-6 p-6 rounded-lg hover:bg-gray/5 dark:hover:bg-dark-gray/20 transition-colors duration-300 border border-gray/10 dark:border-gray/5">
          <TranslatableText 
            en={category.category}
            es={category.category === "Frontend" ? "Frontend" : 
                category.category === "Backend" ? "Backend" : 
                category.category === "Mobile & Tools" ? "Móvil y Herramientas" : 
                category.category}
            tag="h3"
            class="text-xl font-semibold border-b border-gray/20 dark:border-gray/10 pb-3 mb-4"
          />
          <div class="flex flex-wrap gap-3">
            {category.items.map((skill) => (
              <div class="flex items-center bg-gray/10 dark:bg-dark-gray/30 px-3 py-2 rounded-lg">
                {skill.icon && (
                  <span class="mr-2" set:html={skill.icon} />
                )}
                <span class="text-sm font-medium">{skill.name}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>