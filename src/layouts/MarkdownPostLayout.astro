---
const { frontmatter } = Astro.props;
import Layout from "@layouts/Layout.astro";
---

<Layout>
	<main class="text-white mx-auto pt-10 sm:pt-44 max-w-4xl px-4 md:px-0">
		<header class="pb-8">
			<h1 class="mb-2 text-6xl pb-5 text-white">{frontmatter.title}</h1>
			<h4 class="text-white">Escrito por: {frontmatter.author}</h4>
			<h4 class="text-white">{frontmatter.pubDate.toString().slice(0, 10)}</h4>
			<h4 class="text-2xl text-white font-medium mt-4 mb-4">
				{frontmatter.description}
			</h4>
			<div class="flex items-center gap-2 my-5 flex-wrap mb-8">
				{
					frontmatter.tags.sort().map((tag: string) => (
						<p
							class="truncate capitalize rounded-md border border-neutral-800 bg-neutral-900 px-2 py-1 font-mono text-xs"
							title={tag}
						>
							{tag}
						</p>
					))
				}
			</div>
			<!-- <img
				src={frontmatter.image.url}
				width="300"
				alt={frontmatter.image.alt}
				class="mt-4 mb-10 rounded"
			/> -->
			<slot />
		</header>
	</main>
</Layout>

<style>
	:global(pre) {
		color: #d4d4d4;
		padding: 1em;
		border-radius: 0.5em;
		overflow-x: auto;
		margin-bottom: 1em;
	}

	:global(code) {
		color: #d4d4d4;
	}

	:global(body) {
		color: #fff;
	}
</style>
